       })
       document.addEventListener("keydown",(event)=>{
           if(event.ctrlKey && event.shiftKey && (event.key === 'I' || event.key === 'i') || event.ctrlKey && event.shiftKey(event.key === 'U' || event.key === 'u')){
               event.preventDefault()
           }
       })
