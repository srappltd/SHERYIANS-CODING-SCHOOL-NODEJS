<script>
    fleg = 0;
    document.querySelectorAll(".menu-btn").forEach(elem=>{
        elem.addEventListener("click",()=>{

            if(fleg == 0){
                document.querySelector(".menu-pg").classList.remove("hidden")
                fleg = 1;
            }else{
                document.querySelector(".menu-pg").classList.add("hidden")
                fleg =0
            }
        })
    })
   document.addEventListener("contextmenu",(event)=>{
